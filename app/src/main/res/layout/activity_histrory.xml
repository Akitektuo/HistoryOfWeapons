<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.akitektuo.historyofweapons.activity.HistoryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar"
        android:background="@drawable/grey_to_white"
        android:padding="@dimen/space_standard">

        <Button
            android:id="@+id/button_back_history"
            android:layout_width="@dimen/button_dimen"
            android:layout_height="@dimen/button_dimen"
            android:layout_centerVertical="true"
            android:background="@drawable/back_00" />

        <TextView
            android:id="@+id/text_history_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="@string/history"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="35sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <Button
            android:id="@+id/button_filter"
            android:layout_width="@dimen/button_dimen"
            android:layout_height="@dimen/button_dimen"
            android:layout_centerVertical="true"
            android:background="@drawable/filter_00"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list_history_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
