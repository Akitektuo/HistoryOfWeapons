<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/space_variants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_weapon"
        android:layout_width="@dimen/width_small_16_9"
        android:layout_height="@dimen/height_small_16_9"
        android:background="@drawable/background_temp_50"/>

    <TextView
        android:id="@+id/text_weapon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:text="@string/item_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image_item_type"
        android:layout_width="@dimen/button_dimen"
        android:layout_height="@dimen/button_dimen"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>